                                <div class="progress-bar bg-success" style="width:@Model.SuperHero.Powerstats.Speed%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                        </div>

                        <div class="progress-text">
                            <div class="row">
                                <div class="col-6 fw-bold">Durability</div>
                                <div class="col-6 text-end">@Model.SuperHero.Powerstats.Durability</div>
                            </div>
                        </div>
                        <div class="progress mb-4">
                            @if (@Model.SuperHero.Powerstats.Durability.Equals("null") || (Model.SuperHero.Powerstats.Durability.Length == 0))
                            {
                                <div class="progress-bar bg-danger" style="width:0%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Durability) <= 30)
                            {
                                <div class="progress-bar bg-danger" style="width:@Model.SuperHero.Powerstats.Durability%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Durability) > 30 && Convert.ToInt32(@Model.SuperHero.Powerstats.Durability) <= 70)
                            {
                                <div class="progress-bar bg-warning" style="width:@Model.SuperHero.Powerstats.Durability%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else
                            {

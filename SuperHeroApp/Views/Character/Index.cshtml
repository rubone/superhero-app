                            }
                        </div>

                        <div class="progress-text">
                            <div class="row">
                                <div class="col-6 fw-bold">Combat</div>
                                <div class="col-6 text-end">@Model.SuperHero.Powerstats.Combat</div>
                            </div>
                        </div>
                        <div class="progress mb-4">
                            @if (@Model.SuperHero.Powerstats.Combat.Equals("null") || (Model.SuperHero.Powerstats.Combat.Length == 0))
                            {
                                <div class="progress-bar bg-danger" style="width:0%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Combat) <= 30)
                            {
                                <div class="progress-bar bg-danger" style="width:@Model.SuperHero.Powerstats.Combat%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Combat) > 30 && Convert.ToInt32(@Model.SuperHero.Powerstats.Combat) <= 70)
                            {
                                <div class="progress-bar bg-warning" style="width:@Model.SuperHero.Powerstats.Combat%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else
                            {
                                <div class="progress-bar bg-success" style="width:@Model.SuperHero.Powerstats.Combat%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                        </div>

                    </div>
                </div>
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6">
                        <h2 class="h1 mb-0 text-primary">Aliases</h2>
                    </div>
                    @for (int x = 0; x < Model.SuperHero.Biography.Aliases.Count; x++)
                    {
                        <span class="badge badge-secondary">@Model.SuperHero.Biography.Aliases[x]</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
      window.history.back();
    }
</script>
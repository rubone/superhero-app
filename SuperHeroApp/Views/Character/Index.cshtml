@model CharacterViewModel

@{
    ViewData["Title"] = "Character Page";
}


<div class="text-center">
    <div class="container">
        <div class="row text-left" style="padding-bottom: 1px;">
            <div class="col-md-7 col-lg-4 mb-5 mb-lg-0">
                <button type="button" class="btn btn-light" onclick="goBack()">Go Back</button>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-4 mb-5 mb-lg-0">
                <div class="card border-0 shadow">
                    <img src="@Model.SuperHero.Image.Url">
                    <div class="card-body p-1-9 p-xl-5">
                        <div class="mb-4">
                            <h3 class="h4 mb-0">@Model.SuperHero.Name</h3>
                            <span class="text-primary">@Model.SuperHero.Biography.FullName</span>
                        </div>
                        <ul class="list-unstyled mb-4">
                            <li class="mb-3">@Model.SuperHero.Biography.PlaceOfBirth</li>
                            <li>@Model.SuperHero.Biography.Publisher</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h2 class="mb-0 text-primary">Power Stats</h2>
                    </div>
                    <div class="progress-style1">
                        <div class="progress-text">
                            <div class="row">
                                <div class="col-6 fw-bold">Intelligence</div>
                                <div class="col-6 text-end">@Model.SuperHero.Powerstats.Intelligence</div>
                            </div>
                        </div>
                        <div class="progress mb-4">
                            @if (@Model.SuperHero.Powerstats.Intelligence.Equals("null") || (Model.SuperHero.Powerstats.Intelligence.Length == 0))
                            {
                                <div class="progress-bar bg-danger" style="width:0%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Intelligence) <= 30)
                            {
                                <div class="progress-bar bg-danger" style="width:@Model.SuperHero.Powerstats.Intelligence%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Intelligence) > 30 && Convert.ToInt32(@Model.SuperHero.Powerstats.Intelligence) <= 70)
                            {
                                <div class="progress-bar bg-warning" style="width:@Model.SuperHero.Powerstats.Intelligence%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else
                            {
                                <div class="progress-bar bg-success" style="width:@Model.SuperHero.Powerstats.Intelligence%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                        </div>
                        <div class="progress-text">
                            <div class="row">
                                <div class="col-6 fw-bold">Strength</div>
                                <div class="col-6 text-end">@Model.SuperHero.Powerstats.Strength</div>
                            </div>
                        </div>
                        <div class="progress mb-4">
                            @if (@Model.SuperHero.Powerstats.Strength.Equals("null") || (Model.SuperHero.Powerstats.Strength.Length == 0))
                            {
                                <div class="progress-bar bg-danger" style="width:0%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Strength) <= 30)
                            {
                                <div class="progress-bar bg-danger" style="width:@Model.SuperHero.Powerstats.Strength%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else if (Convert.ToInt32(@Model.SuperHero.Powerstats.Strength) > 30 && Convert.ToInt32(@Model.SuperHero.Powerstats.Strength) <= 70)
                            {
                                <div class="progress-bar bg-warning" style="width:@Model.SuperHero.Powerstats.Strength%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            }
                            else
                            {
                                <div class="progress-bar bg-success" style="width:@Model.SuperHero.Powerstats.Strength%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>

                            }
                        </div>

                        <div class="progress-text">
                            <div class="row">
                                <div class="col-6 fw-bold">Speed</div>
                                <div class="col-6 text-end">@Model.SuperHero.Powerstats.Speed</div>
                            </div>
                        </div>
                        <div class="progress mb-4">
